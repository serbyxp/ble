{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "PIO: Build firmware",
      "type": "shell",
      "command": "pio",
      "args": [
        "run",
        "-e",
        "nodemcu-32s"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$platformio"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "PIO: Upload firmware",
      "type": "shell",
      "command": "pio",
      "args": [
        "run",
        "-e",
        "nodemcu-32s",
        "-t",
        "upload"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": [
        "$platformio"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "dependsOn": "PIO: Build firmware",
      "dependsOrder": "sequence"
    },
    {
      "label": "PIO: Serial monitor",
      "type": "shell",
      "command": "pio",
      "args": [
        "device",
        "monitor",
        "-b",
        "115200"
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": true
      }
    },
    {
      "label": "PIO: Capture WiFi lifecycle logs",
      "type": "shell",
      "command": "pio",
      "args": [
        "device",
        "monitor",
        "-b",
        "115200"
      ],
      "dependsOn": [
        "PIO: Build firmware",
        "PIO: Upload firmware"
      ],
      "dependsOrder": "sequence",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": true
      }
    }
  ]
}
